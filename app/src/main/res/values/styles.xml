<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- 뷰가 상태바및 소프트키 영역을 제외한 전체영역을 차지 -->
        <item name="android:fitsSystemWindows">false</item>
        <!-- 툴바 아래 그림자 삭제 -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionModeOverlay">@null</item>

    </style>


    <style name="CustomAlertDialogFragment" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/buttonBarButtonStyle.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/buttonBarButtonStyle.Negative</item>
    </style>

    <style name="buttonBarButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored" />
    <style name="buttonBarButtonStyle.Positive">
        <item name="android:textColor">@color/btn_alert_dialog_ok</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="buttonBarButtonStyle.Negative">
        <item name="android:textColor">@color/btn_alert_dialog_cancel</item>
        <item name="android:textSize">16dp</item>
    </style>


    <!-- 텍스트뷰 -->
    <!-- 16 black -->
    <style name="TextViewStyle_16_black" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 13 black -->
    <style name="TextViewStyle_13_black" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textSize">13dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TvMenuBottomSheet" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TvNoData" parent="Widget.AppCompat.TextView">
        <item name="android:text">데이터가 없습니다.</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/txt_black</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
    </style>

    <style name="TvKey" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/txt_cookie_key</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TvValue" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/txt_cookie_value</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- 체크박스 -->
    <!-- 목록선택 -->
    <style name="CheckBoxStyle_selector" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/check_selector</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>


    <!-- 디바이더 -->
    <style name="Divider">
        <item name="android:background">@color/divider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>


    <!-- 바텀시트 다이얼로그 -->
    <style name="BaseBottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BaseBottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BaseBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
        <item name="android:windowAnimationStyle">@style/AnimBottomSheetDialog</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <!-- 바텀시트 다이얼로그 애니메이션 -->
    <style name="AnimBottomSheetDialog">
        <item name="android:windowEnterAnimation">@anim/anim_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_out_bottom</item>
    </style>

</resources>
