<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- 뷰가 상태바및 소프트키 영역을 제외한 전체영역을 차지 -->
        <item name="android:fitsSystemWindows">false</item>
        <!-- 툴바 아래 그림자 삭제 -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionModeOverlay">@null</item>
    </style>


    <style name="CustomAlertDialogFragment" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/buttonBarButtonStyle.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/buttonBarButtonStyle.Negative</item>
    </style>

    <style name="buttonBarButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored"></style>
    <style name="buttonBarButtonStyle.Positive">
        <item name="android:textColor">@color/btn_alert_dialog_ok</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="buttonBarButtonStyle.Negative">
        <item name="android:textColor">@color/btn_alert_dialog_cancel</item>
        <item name="android:textSize">16dp</item>
    </style>

</resources>
